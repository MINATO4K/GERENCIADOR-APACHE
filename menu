!#/bin/bash 

echo -e "\033[1;33m
║==========================================║\033[1;32m
║                                          ║
║     GERENCIADOR DE ARQUIVOS\033[1;33m              ║ 
║==========================================║
║                                          ║
┣═> \033[1;31m1\033[1;34m )>> CRIAR ARQUIVO HTML📂\033[1;33m             ║
║                                          ║
┣═> \033[1;31m2\033[1;34m )>> CRIAR ARQUIVO PHP📂\033[1;33m              ║
║                                          ║
┣═> \033[1;31m3\033[1;34m )>> REMOVER ARQUIVO ✂️\033[1;33m                ║
║                                          ║
┣═> \033[1;31m4\033[1;34m )>> INICIAR🔄 APACHE2\033[1;33m                ║
║                                          ║
┣═> \033[1;31m5\033[1;34m )>> PARAR  ✋️ APACHE2                \033[1;33m║
╠══════════════════════════════════════════╣
║
┣═> \033[1;31m6\033[1;34m )>> CRIAR ARQUIVO CSS📂
║
┣═> \033[1;31m7\033[1;34m )>> CRIAR ARQUIVO JS📂
║
┣═> \033[1;31mE\033[1;34m )>> MOVER CONTEÚDO
║
┣═> \033[1;31mD\033[1;34m )>> MODO DE DEBUG"

read -n2 -p":" menu

if [ $menu == 1 ];
then
echo -e "
\033[1;32m Nome do arquivo 
"
read  ar 
touch $ar.html 
mv $ar.html /data/data/com.termux/files/usr/share/apache2/default-site/htdocs
elif [ $menu == 2 ];
then
echo -e "
\033[1;32m Nome do arquivo 
"
read  ar 
touch $ar.php 
mv $ar.php /data/data/com.termux/files/usr/share/apache2/default-site/htdocs
elif [ $menu == 3 ];
then
echo -e "\033[1;32m Nome do arquivo completo"
read ar
rm /data/data/com.termux/files/usr/share/apache2/default-site/htdocs/$ar
elif [ $menu == 4 ];
then
apachectl start >> /dev/null
echo -e "\033[1;36m
=============================================
\033[1;32;3m INICIANDO APACHE..."
sleep 3
echo -e "
=============================================
\033[1;32;3m INICIADO APACHE\033[1;33;3m
 acesse via: localhost:8080"
elif [ $menu == 5 ];
then
apachectl stop
echo -e "\033[1;36m
=============================================
\033[1;32;3m APACHE PARADO"
elif [ $menu == 6 ];
then
echo -e "
\033[1;32m Nome do arquivo 
"
read  ar 
touch $ar.css 
mv $ar.css /data/data/com.termux/files/usr/share/apache2/default-site/htdocs
elif [ $menu == 7 ];
then
echo -e "
\033[1;32m Nome do arquivo 
"
read  ar 
touch $ar.js 
mv $ar.js /data/data/com.termux/files/usr/share/apache2/default-site/htdocs
elif [ $menu == E ];
then
echo -e "\033[1;33m 
=============================================\033[1;32m
Nome do arquivo
De migração de CONTEÚDO
"
read  ar 
echo -e "\033[1;33m 
=============================================\033[1;32m
Nome do arquivo 
de destino
"
read  arr 
cat $ar > /data/data/com.termux/files/usr/share/apache2/default-site/htdocs/$arr
elif [ $menu == D  ];
then
echo -e "\033[1;33m
=============================================
              MODO DE DEBUG 
=============================================
\033[1;U5mDEFINA UM ARQUIVO ONDE 
SERÁ REDIRECIONADO AS CONFIGURAÇÕES
==================================
A CADA 5 SEGUNDOS O SISTEMA 
VAI PUXAR QUALQUER MODIFICAÇÕES NO ARQUIVO
==================================
E VAI SALVAR NO ARQUIVO FINAL DE DEBUG
"
sleep 12 
clear
echo -e "\033[1;33m 
=============================================\033[1;32m
Nome do arquivo
De migração de CONTEÚDO
"
read  ar 
echo -e "\033[1;33m 
=============================================\033[1;32m
Nome do arquivo 
de destino
"
read  arr 

while true
do 
   sleep 5
   cat $ar > /data/data/com.termux/files/usr/share/apache2/default-site/htdocs/$arr
   done
fi